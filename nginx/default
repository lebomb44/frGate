server {
	listen 80 default_server;
	server_tokens off;
	return 301 https://$host$request_uri;
}

server {
	listen 443 default_server ssl;
	server_tokens off;
	ssl_certificate /etc/nginx/ssl/localhost.crt;
	ssl_certificate_key /etc/nginx/ssl/localhost.key;
	ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
	ssl_ciphers         HIGH:!aNULL:!MD5;
	#more_set_headers "Server: none";
	auth_basic "Restricted";                                              
	auth_basic_user_file /etc/nginx/.htpasswd;
	location / {
		root /etc/nginx/html;
		add_header Set-Cookie "redirect=none;Path=/;";
	}

	# Nginx
	location /nginx {
		stub_status on;
		add_header Set-Cookie "redirect=none;Path=/;";
	}

	# Ping-Pong
	location /ping {
		auth_basic off;
		return 200 'pong';
		add_header Content-Type text/plain;
		add_header Set-Cookie "redirect=none;Path=/;";
	}

	# ShellInABox
	location /shell {
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass http://127.0.0.1:4200/;
	}

	# Files
	location /files/ {
		autoindex on;
		add_header Set-Cookie "redirect=none;Path=/;";
		alias /home/jeedom/;
	}
	location /explore/ {
		fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
		fastcgi_param SCRIPT_FILENAME /home/jeedom/workspace/tinyfilemanager/tinyfilemanager.php/$query_string;
		include fastcgi_params;
		add_header Set-Cookie "redirect=none;Path=/;";
		alias /home/jeedom/;
	}
	# Box
	location /box/ {
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass https://192.168.1.1/;
	}
	# Wifi
	location /wifi/ {
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass http://192.168.1.2/;
	}
	# Jeedom
	location /jeedom/ {
		auth_basic off;
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass http://127.0.0.1:8080/;
	}
	# Camera Salon
	location /camsalon/ {
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass http://192.168.1.151/;
	}
	# Camera Allee
	location /camallee/ {
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass https://192.168.1.152/;
	}
	# Camera Veranda
	location /camveranda/ {
		add_header Set-Cookie "redirect=none;Path=/;";
		proxy_pass https://192.168.1.153/;
	}
	# Cameras
	location /cameras/ {
		gzip off;
		fastcgi_pass unix:/var/run/fcgiwrap.socket;
		fastcgi_param SCRIPT_FILENAME /home/jeedom/workspace/reolink/index.py;
		include fastcgi_params;
		add_header Set-Cookie "redirect=none;Path=/;";
        }
}

